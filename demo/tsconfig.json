{
	"include": [
		"./**/*.tsx",
		"./**/*.ts"
	],
	"compilerOptions": {
		"target": "es5",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"noErrorTruncation": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ES6",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
	  }
}